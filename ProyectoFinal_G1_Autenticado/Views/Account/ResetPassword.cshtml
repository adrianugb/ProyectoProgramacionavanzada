@model ProyectoFinal_G1_Autenticado.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer Contraseña";
}

<main aria-labelledby="title">
    <h2 id="title">Restablecer Contraseña</h2>
    <h4>Crea una nueva contraseña segura</h4>
    <hr />

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form", @class = "form-reset" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Code)
        @Html.ValidationSummary("", new { @class = "validation-summary-errors" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Correo Electrónico", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new
            {
                @class = "form-control",
                placeholder = "tu.correo@ejemplo.com",
                autocomplete = "email"
            })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Nueva Contraseña", new { @class = "form-label" })
            @Html.PasswordFor(m => m.Password, new
            {
                @class = "form-control",
                placeholder = "Mínimo 6 caracteres",
                autocomplete = "new-password"
            })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Contraseña", new { @class = "form-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new
            {
                @class = "form-control",
                placeholder = "Repite tu contraseña",
                autocomplete = "new-password"
            })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn-principal" value="Restablecer Contraseña" />
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}