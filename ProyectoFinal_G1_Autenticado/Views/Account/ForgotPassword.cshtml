@model ProyectoFinal_G1_Autenticado.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Recuperar Contraseña";
}

<main aria-labelledby="title">
    <h2 id="title">¿Olvidaste tu Contraseña?</h2>
    <h4>No te preocupes, te ayudamos a recuperarla</h4>
    <hr />

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form", @class = "form-forgot" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "validation-summary-errors" })

        <div class="info-box">
            <p>Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Correo Electrónico", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new
            {
                @class = "form-control",
                placeholder = "tu.correo@ejemplo.com",
                autocomplete = "email"
            })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn-principal" value="Enviar Enlace" />
        </div>
    }

    <div class="link-secundario">
        <p>¿Recordaste tu contraseña? @Html.ActionLink("Inicia Sesión", "Login")</p>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}