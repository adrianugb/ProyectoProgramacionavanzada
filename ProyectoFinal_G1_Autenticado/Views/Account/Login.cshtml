@using ProyectoFinal_G1_Autenticado.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<main aria-labelledby="title">
    <h2 id="title">Iniciar Sesión</h2>
    <h4>Ingresa a tu cuenta</h4>
    <hr />

    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-login" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Correo Electrónico", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new
                {
                    @class = "form-control",
                    placeholder = "tu.correo@ejemplo.com",
                    autocomplete = "email"
                })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new
                {
                    @class = "form-control",
                    placeholder = "Escribe tu contraseña",
                    autocomplete = "current-password"
                })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group-checkbox">
                <label class="checkbox-custom">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    <span class="checkbox-label">Recordarme</span>
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Iniciar Sesión" class="btn-principal" />
            </div>

            <div class="links-extra">
                @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", null, new { @class = "link-secundario-inline" })
            </div>
        }
    </section>

    <div class="link-secundario">
        <p>¿No tienes cuenta? @Html.ActionLink("Regístrate aquí", "Register")</p>
    </div>

    @* Sección de logins externos (opcional) *@
    <section id="socialLoginForm" class="social-login-section">
        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}