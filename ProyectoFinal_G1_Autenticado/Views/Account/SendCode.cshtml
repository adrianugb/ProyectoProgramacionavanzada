@model ProyectoFinal_G1_Autenticado.Models.SendCodeViewModel
@{
    ViewBag.Title = "Enviar Código";
}

<main aria-labelledby="title">
    <h2 id="title">Enviar Código</h2>
    <h4>Selecciona cómo quieres recibir el código</h4>
    <hr />

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)

        <div class="info-box">
            <p>Selecciona el proveedor de autenticación en dos fases:</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedProvider, "Método de Verificación", new { @class = "form-label" })
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar Código" class="btn-principal" />
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}