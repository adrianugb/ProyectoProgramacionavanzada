@model ProyectoFinal_G1_Autenticado.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<main aria-labelledby="title">
    <h2 id="title">Crear Cuenta</h2>
    <h4>Únete a nosotros completando el formulario</h4>
    <hr />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-registro" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "validation-summary-errors" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Correo Electrónico", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new
            {
                @class = "form-control",
                placeholder = "tu.correo@ejemplo.com",
                autocomplete = "email"
            })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "form-label" })
            @Html.PasswordFor(m => m.Password, new
            {
                @class = "form-control",
                placeholder = "Mínimo 6 caracteres",
                autocomplete = "new-password"
            })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Contraseña", new { @class = "form-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new
            {
                @class = "form-control",
                placeholder = "Repite tu contraseña",
                autocomplete = "new-password"
            })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Registrarse" class="btn-principal" />
        </div>
    }

    <div class="link-secundario">
        <p>¿Ya tienes una cuenta? @Html.ActionLink("Inicia Sesión", "Login", "Account")</p>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}