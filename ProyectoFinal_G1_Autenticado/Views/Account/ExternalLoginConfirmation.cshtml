@model ProyectoFinal_G1_Autenticado.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Completar Registro";
}

<main aria-labelledby="title">
    <h2 id="title">Completar Registro</h2>
    <h4>Asocia tu cuenta @ViewBag.LoginProvider</h4>
    <hr />

    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

        <div class="info-box">
            <p>
                Te autenticaste correctamente con <strong>@ViewBag.LoginProvider</strong>.
                Completa tu registro ingresando tu correo electrónico.
            </p>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Correo Electrónico", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new
            {
                @class = "form-control",
                placeholder = "tu.correo@ejemplo.com"
            })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn-principal" value="Registrarse" />
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}