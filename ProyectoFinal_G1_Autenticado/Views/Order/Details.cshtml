@model ProyectoFinal_G1_Autenticado.Models.Order
@{
    ViewBag.Title = "Detalle del Pedido";
}

<h2>Pedido #@Model.Id</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Productos</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio Unitario</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.Details)
                        {
                            <tr>
                                <td>@detail.Product.Name</td>
                                <td>@String.Format("{0:C}", detail.UnitPrice)</td>
                                <td>@detail.Quantity</td>
                                <td>@String.Format("{0:C}", detail.UnitPrice * detail.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-secondary">
                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                            <td><strong>@String.Format("{0:C}", Model.Total)</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Informaci√≥n</h5>
            </div>
            <div class="card-body">
                <p><strong>Fecha:</strong><br />@Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
                <p>
                    <strong>Estado:</strong><br />
                    @switch (Model.Status)
                    {
                        case ProyectoFinal_G1_Autenticado.Models.OrderStatus.Completada:
                            <span class="badge bg-success">Completada</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Status</span>
                            break;
                    }
                </p>
                <hr />
                <p class="text-center"><strong>Total: @String.Format("{0:C}", Model.Total)</strong></p>
            </div>
        </div>
        <div class="mt-3">
            @Html.ActionLink("Volver a Mis Pedidos", "Index", null, new { @class = "btn btn-outline-secondary w-100" })
        </div>
    </div>
</div>

