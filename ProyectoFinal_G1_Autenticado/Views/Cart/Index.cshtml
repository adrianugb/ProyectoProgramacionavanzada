@model IEnumerable<ProyectoFinal_G1_Autenticado.Models.CartItem>
@{
    ViewBag.Title = "Mi Carrito";
}

<h2>Mi Carrito</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var firstImg = item.Product.Images?.OrderBy(i => i.SortOrder).FirstOrDefault();
                <tr>
                    <td style="width:80px;">
                        @if (firstImg != null)
                        {
                            <img src="@Url.Action("GetImage", "Product", new { id = firstImg.Id })" class="img-thumbnail" style="max-height:60px;" />
                        }
                    </td>
                    <td>
                        @Html.ActionLink(item.Product.Name, "Details", "Product", new { id = item.ProductId }, null)
                        <br /><small class="text-muted">Código: @item.Product.Code</small>
                    </td>
                    <td>@String.Format("{0:C}", item.Product.Price)</td>
                    <td style="width:180px;">
                        @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <div class="input-group">
                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="@item.Product.Stock" class="form-control" style="width:70px;" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Actualizar</button>
                            </div>
                        }
                    </td>
                    <td>@String.Format("{0:C}", item.Product.Price * item.Quantity)</td>
                    <td>
                        @using (Html.BeginForm("RemoveItem", "Cart", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este producto?')">Eliminar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="table-secondary">
                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                <td colspan="2"><strong>@String.Format("{0:C}", ViewBag.CartTotal)</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between">
        @Html.ActionLink("Seguir Comprando", "Index", "Product", null, new { @class = "btn btn-secondary" })
        @Html.ActionLink("Proceder al Pago", "Checkout", "Cart", null, new { @class = "btn btn-success" })
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Tu carrito está vacío.</p>
        @Html.ActionLink("Ver Productos", "Index", "Product", null, new { @class = "btn btn-primary" })
    </div>
}

