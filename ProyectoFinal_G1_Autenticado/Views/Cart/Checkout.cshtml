@model IEnumerable<ProyectoFinal_G1_Autenticado.Models.CartItem>
@{
    ViewBag.Title = "Confirmar Compra";
}

<h2>Confirmar Compra</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Resumen del Pedido</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@String.Format("{0:C}", item.Product.Price)</td>
                                <td>@String.Format("{0:C}", item.Product.Price * item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Total a Pagar</h5>
            </div>
            <div class="card-body text-center">
                <h2>@String.Format("{0:C}", ViewBag.CartTotal)</h2>
                <hr />
                @using (Html.BeginForm("ConfirmPurchase", "Order", FormMethod.Post, new { id = "formCheckout" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#confirmModal">
                        Confirmar Compra
                    </button>
                }
                <div class="mt-3">
                    @Html.ActionLink("Volver al Carrito", "Index", "Cart", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación de compra -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Confirmar Compra</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de realizar esta compra por <strong>@String.Format("{0:C}", ViewBag.CartTotal)</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmPurchase">
                    <span class="spinner-border spinner-border-sm me-1" id="spinnerPurchase" style="display:none;"></span>
                    Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#btnConfirmPurchase').click(function () {
            $(this).prop('disabled', true);
            $('#spinnerPurchase').show();
            $('#formCheckout').submit();
        });
    </script>
}
