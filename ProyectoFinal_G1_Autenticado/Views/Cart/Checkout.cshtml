@model IEnumerable<ProyectoFinal_G1_Autenticado.Models.CartItem>
@{
    ViewBag.Title = "Confirmar Compra";
}

<h2>Confirmar Compra</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Resumen del Pedido</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@String.Format("{0:C}", item.Product.Price)</td>
                                <td>@String.Format("{0:C}", item.Product.Price * item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Total a Pagar</h5>
            </div>
            <div class="card-body text-center">
                <h2>@String.Format("{0:C}", ViewBag.CartTotal)</h2>
                <hr />
                @using (Html.BeginForm("ConfirmPurchase", "Order", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg w-100">Confirmar Compra</button>
                }
                <div class="mt-3">
                    @Html.ActionLink("Volver al Carrito", "Index", "Cart", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>

