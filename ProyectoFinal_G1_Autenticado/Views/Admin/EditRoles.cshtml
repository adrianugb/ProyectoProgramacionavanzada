@model ProyectoFinal_G1_Autenticado.Models.EditRolesViewModel

@{
    ViewBag.Title = "Editar Roles";
}

<h2>Editar Roles de Usuario</h2>

<div class="card" style="padding:20px;">
    <h4>Usuario: @Model.Email</h4>
    <hr />

    @using (Html.BeginForm("EditRoles", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserId)

<div class="form-group">
    <label>Roles disponibles:</label>

    @foreach (var role in Model.RolesList)
    {
        <div class="radio">
            <label>
                <input type="radio"
                       name="SelectedRole"
                       value="@role.Value"
                       @(Model.SelectedRole == role.Value ? "checked" : "") />
                @role.Text
            </label>
        </div>
    }
</div>

        <br />

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        @Html.ActionLink("Volver", "ListUsers", "Admin", null, new { @class = "btn btn-secondary" })
    }
