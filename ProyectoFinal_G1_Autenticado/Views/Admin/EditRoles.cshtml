@model ProyectoFinal_G1_Autenticado.Models.EditRolesViewModel
@{
    ViewBag.Title = "Editar Rol";
}

<h2>Editar Rol de Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="form-group">
        <label>Rol</label>
        @Html.DropDownListFor(m => m.SelectedRole, Model.RolesList, "-- Seleccionar Rol --", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    @Html.ActionLink("Cancelar", "ListUsers", null, new { @class = "btn btn-default" })
}
